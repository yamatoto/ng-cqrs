// For format details, see https://aka.ms/vscode-remote/devcontainer.json or this file's README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.134.0/containers/javascript-node
{
  "name": "Node.js",
  "build": {
    "dockerfile": "Dockerfile",
    // Update 'VARIANT' to pick a Node version: 10, 12, 14
    "args": { "VARIANT": "14" }
  },

  // Set *default* container specific settings.json values on container create.
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },

  // Add the IDs of extensions you want installed when the container is created.
  // NOTE: 「ローカルにインストール」ボタンが出る拡張機能はローカルにインストールが必要です
  "extensions": [
    "dbaeumer.vscode-eslint",
    "ms-azuretools.vscode-docker",
    "antfu.i18n-ally",
    "nucllear.vscode-extension-auto-import",
    "wooodhead.disable-eslint-rule",
    "editorconfig.editorconfig",
    "tombonnike.vscode-status-bar-format-toggle",
    "donjayamanne.githistory",
    "eamodio.gitlens",
    "oderwat.indent-rainbow",
    "zignd.html-css-class-completion",
    "wmaurer.vscode-jumpy",
    "eg2.vscode-npm-script",
    "christian-kohler.npm-intellisense",
    "ionutvmi.path-autocomplete",
    "christian-kohler.path-intellisense",
    "esbenp.prettier-vscode",
    "mechatroner.rainbow-csv",
    "chrmarti.regex",
    "sibiraj-s.vscode-scss-formatter",
    "streetsidesoftware.code-spell-checker",
    "alefragnani.bookmarks",
    "mikael.angular-beastcode",
    "angular.ng-template",
    "hardikpthv.angularmaterial",
    "herrherrmann.angular-bootstrap",
    "danielehrhardt.ionic3-vs-ionview-snippets",
    "fivethree.vscode-ionic-snippets",
    "hardikpthv.ngrxsnippets",
    "nrwl.angular-console"
  ],

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [3000],

  // Specifies a command that should be run after the container has been created.
  "postCreateCommand": "yarn install",

  // Comment out the next line to run as root instead.
  "remoteUser": "node"
}
